{
  "extends": [
    "tslint:recommended"
  ],
  "defaultSeverity": "warn",
  "linterOptions": {
    "exclude": [
      "node_modules/*",
      "dist/*"
    ],
    "format": "verbose"
  },
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "jsx-no-bind": false,
    "jsx-no-lambda": false,
    "max-classes-per-file": false,
    "ordered-imports": false,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "typedef": [
      true,
      "call-signature"
    ],
    "no-unused-variable": true,
    "variable-name": [
      true,
      "check-format",
      "ban-keywords",
      "allow-pascal-case",
      "allow-leading-underscore",
      "allow-trailing-underscore"
    ]
  }
}